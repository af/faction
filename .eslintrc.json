{
    "extends": "eslint:recommended",
    "rules": {
        // Possible errors & best practices
        "complexity": [2, 6],
        "consistent-return": 2,
        "curly": [2, "multi-line"],
        "dot-notation": 2,
        "eqeqeq": [2, "allow-null"],
        "linebreak-style": [2, "unix"],
        "no-else-return": 2,
        "no-extra-bind": 2,
        "no-magic-numbers": [2, { "ignore": [0, 1, 2, -1] }],
        "no-multi-spaces": 2,
        "no-param-reassign": 2,
        "no-throw-literal": 2,
        "no-warning-comments": 1,
        "no-unexpected-multiline": 2,
        "radix": [2, "as-needed"],
        "wrap-iife": [2, "outside"],
        "yoda": 2,

        // Variables
        "init-declarations": [2, "always"],
        "no-shadow": 2,
        "no-undef-init": 2,
        "no-use-before-define": 2,

        // Node/commonjs
        "callback-return": 2,
        "handle-callback-err": 2,

        // Style
        "array-bracket-spacing": [2, "never"],
        "block-spacing": 2,
        "brace-style": [2, "1tbs", { "allowSingleLine": true }],
        "camelcase": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "eol-last": 2,
        "indent": [2, 4],
        "key-spacing": 2,
        "max-depth": [2, 4],
        "max-len": [2, 90, 4, { "ignoreUrls": true }],
        "max-nested-callbacks": [2, 3],
        "new-cap": 2,
        "no-bitwise": 1,
        "no-lonely-if": 2,
        "no-multiple-empty-lines": [2, { "max": 3 }],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-restricted-syntax": [2, "WithStatement"],
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "object-curly-spacing": [2, "always"],
        "one-var": [2, "never"],
        "operator-linebreak": 2,
        "padded-blocks": [2, "never"],
        "quotes": [2, "single"],
        "quote-props": [2, "as-needed"],
        "semi": [2, "never"],
        "semi-spacing": 2,
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "space-before-keywords": [2, "always"],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "spaced-comment": [2, "always"],

        // ES6
        // Any rules here set to 0 are things to turn on eventually
        "arrow-spacing": 2,
        "no-arrow-condition": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "object-shorthand": 0,
        "prefer-arrow-callback": 0,
        "prefer-spread": 0,
        "prefer-template": 0,
        "no-var": 0,

        // JSDoc
        "require-jsdoc": 1,
        "valid-jsdoc": 2
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    }
}
